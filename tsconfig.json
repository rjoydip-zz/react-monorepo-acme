{
  "include": ["src/**/*.tsx", "diagraph.d.ts"],
  "exclude": ["node_modules/**/*"],
  "compilerOptions": {
    "target": "es2021",
    "outDir": "./build",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "moduleResolution": "Node",
    "lib": ["DOM"],
    "noEmitOnError": false,
    "declaration": true,
    "declarationMap": false,
    "isolatedModules": true,
    "strict": true
  }
}
