{
  "name": "react-monorepo-acme",
  "version": "0.0.1",
  "description": "Welcome to Acme React Library. A monorepo libary starter.",
  "private": true,
  "engines": {
    "node": ">=14 <=16"
  },
  "main": "./packages/index.ts",
  "sideEffects": false,
  "packageManager": "pnpm@7.3.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prepare": "husky install && chmod ug+x .husky/*",
    "typecheck": "tsc --noEmit",
    "lint": "eslint packages/**/*.{ts,tsx} --max-warnings 0",
    "lint:fix": "eslint packages/**/*.{ts,tsx} --max-warnings 0 --fix",
    "format": "prettier --write --cache .",
    "clean": "rimraf dist build coverage .parcel-* cache .pnpm-* *-debug.log *.lock *-lock.*",
    "build:example": "cd example && pnpm install && pnpm build",
    "dev:example": "cd example && pnpm install && pnpm dev",
    "preview:example": "cd example && pnpm install && pnpm preview",
    "predeploy": "pnpm build:example",
    "deploy": "gh-pages -d example/build",
    "all": "run-s clean typecheck format lint:fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/react-monorepo-acme.git"
  },
  "keywords": [],
  "author": "rjoydip",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rjoydip/react-monorepo-acme/issues"
  },
  "homepage": "https://github.com/rjoydip/react-monorepo-acme#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@vitejs/plugin-react": "^2.0.0",
    "@vitest/ui": "^0.17.0",
    "c8": "^7.11.3",
    "eslint": "^8.19.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gh-pages": "^4.0.0",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "vitest": "^0.17.0"
  },
  "lint-staged": {
    "**/*.{md,json,ts,tsx}": "prettier --write"
  },
  "pnpm": {
    "overrides": {}
  }
}
