{
  "name": "diagraph",
  "version": "0.0.1",
  "description": "Create beautiful system diagrams with JS",
  "engines": {
    "node": ">=14 <=16"
  },
  "sideEffects": false,
  "main": "build/index.html",
  "types": "build/diagraph.d.ts",
  "scripts": {
    "prepare": "husky install && chmod ug+x .husky/*",
    "typecheck": "tsc -noEmit",
    "start": "parcel serve src/index.html",
    "lint": "eslint src/**/* --ext .{ts,tsx} --max-warnings 0 --fix",
    "format": "prettier --write '!{coverage,build,.cache}/**/*' '**/*.{md,json,ts,tsx}'",
    "build": "run-s clean typecheck lint format && parcel build src/index.html --public-url .",
    "clean": "rimraf dist/ build/ coverage/ .parcel-*/ cache/ .pnpm-* *-debug.log *.lock *-lock.*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/diagraph.git"
  },
  "keywords": [],
  "author": "rjoydip",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rjoydip/diagraph/issues"
  },
  "homepage": "https://github.com/rjoydip/diagraph#readme",
  "dependencies": {
    "@svgdotjs/svg.js": "^3.1.2",
    "preact": "^10.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@parcel/config-default": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@vitest/ui": "^0.17.0",
    "c8": "^7.11.3",
    "eslint": "^8.19.0",
    "eslint-plugin-preact": "^0.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "vitest": "^0.17.0"
  },
  "lint-staged": {
    "**/*.{md,json,ts,tsx}": "prettier --write"
  }
}
